{
    "compilerOptions": {
      "target": "ES2015", 
      "lib": ["ES2015", "DOM"],
      "moduleResolution": "Node",
      "declaration": true,
      "emitDeclarationOnly": true,
      "module": "CommonJS",
      "rootDir": "./src",
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }
  